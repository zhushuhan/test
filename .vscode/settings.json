{
    // ! VCA-Begin
    // * format
    "editor.formatOnSave": true, // TODO 按需配置
    // * CPP doc & format
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google}",
    // "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4}", // TODO 按需配置，可配置缩进宽度为 4
    // * python doc & format
    "autoDocstring.docstringFormat": "numpy",
    "python.formatting.provider": "yapf",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.python"
    },
    // * koroFileHeader
    "fileheader.configObj": {
        "createFileTime": true,
        "language": {
            "languagetest": {
                "head": "/$$",
                "middle": " $ @",
                "end": " $/"
            }
        },
        "autoAdd": false,
        "autoAddLine": 100,
        "autoAlready": true,
        "annotationStr": {
            "head": "/*",
            "middle": " * @",
            "end": " */",
            "use": false
        },
        "headInsertLine": {
            "php": 2,
            // "sh": 2
        },
        "beforeAnnotation": {
            "文件后缀": "该文件后缀的头部注释之前添加某些内容",
            "py": "#!/usr/bin/env python3\n# -*- coding: utf-8 -*-", // py文件默认，可修改
            "sh": "#!/bin/bash",
        },
        "afterAnnotation": {
            "文件后缀": "该文件后缀的头部注释之后添加某些内容",
            "js": "// js文件头部注释之后的内容",
            "*": "\n" // 所有文件新增头部注释之后都空一行(除了js)
        },
        "specialOptions": { //自定义字段名
            // "Date": "Created Date",
            // "LastEditTime": "Last Modified",
            // "LastEditors": "Modified By",
            "LastEditTime": "Last Modified Date",
            "LastEditors": "Last Modified By",
        },
        "switch": {
            "newlineAddAnnotation": true
        },
        "supportAutoLanguage": [],
        "prohibitAutoAdd": [
            "json"
        ],
        "folderBlacklist": [
            "node_modules",
            "文件夹禁止自动添加头部注释"
        ],
        "prohibitItemAutoAdd": [
            "项目的全称, 整个项目禁止自动添加头部注释, 可以使用快捷键添加"
        ],
        "moveCursor": true,
        "dateFormat": "YYYY-MM-DD HH:mm",
        "atSymbol": [
            "@",
            "@"
        ],
        "atSymbolObj": {
            "文件后缀": [
                "头部注释@符号",
                "函数注释@符号"
            ]
        },
        "colon": [
            ": ",
            ": "
        ],
        "colonObj": {
            "文件后缀": [
                "头部注释冒号",
                "函数注释冒号"
            ]
        },
        "filePathColon": "路径分隔符替换",
        "showErrorMessage": false,
        "writeLog": false,
        "wideSame": true,
        "wideNum": 19,
        "functionWideNum": 0,
        "CheckFileChange": false,
        "createHeader": true, //新建文件自动添加头部注释
        "useWorker": false,
        "designAddHead": false,
        "headDesignName": "random",
        "headDesign": false,
        "cursorModeInternal": false,
        "openFunctionParamsCheck": true,
        "functionParamsShape": "normal",
        "functionBlankSpace": 0
    },
    "fileheader.customMade": {
        "Author": "ZhenHuang (hz13@mail.ustc.edu.cn)", // TODO
        "Date": "Do not edit",
        "LastEditors": "ZhenHuang (hz13@mail.ustc.edu.cn)", // TODO
        "LastEditTime": "Do not edit",
        // "FilePath": "",
        "Description": "",
        "custom_string_obkoro1_copyright": "-------- \nCopyright (c) ${now_year} Multimedia Group USTC. ", // 版权声明 保留所有权利 自动替换年份
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "explorer.confirmDelete": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "git.ignoreLegacyWarning": true,
    "python.defaultInterpreterPath": "/home/muzhao.hz/Packages/anaconda3/envs/XNN/bin/python",
    "explorer.confirmDragAndDrop": false,
    "latex-workshop.view.pdf.viewer": "external",
    "mypy.configFile": ".mypy.ini",
    "editor.minimap.enabled": false,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "terminal.integrated.defaultProfile.linux": "bash",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/data/**": true,
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.defaultLocation": "editor",
    // ! VCA-End
}